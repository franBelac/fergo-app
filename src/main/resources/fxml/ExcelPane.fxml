<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="457.0" prefWidth="606.0" style="-fx-background-color: rgb(65,65,65);"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.ExcelController">
   <Label alignment="TOP_CENTER" contentDisplay="TOP" layoutX="13.0" layoutY="14.0"
          text="Create your Excel sheet in Create Race first" textAlignment="CENTER" textFill="WHITE"
          AnchorPane.leftAnchor="20.0">
      <font>
         <Font name="Arial Black" size="24.0"/>
      </font>
   </Label>
   <Label alignment="CENTER" layoutX="149.0" layoutY="105.0" text="Then put the full path to it here" textFill="WHITE"
          AnchorPane.leftAnchor="20.0">
      <font>
         <Font name="Arial Black" size="18.0"/>
      </font>
   </Label>
   <Button fx:id="excelFinder" alignment="CENTER" contentDisplay="CENTER" layoutX="349.0" layoutY="106.0"
           mnemonicParsing="false" onAction="#clickExcelFinder" text="Search for your excel sheet"/>
   <TextField fx:id="pathField" alignment="CENTER" layoutX="354.0" layoutY="153.0"/>
   <Button fx:id="confirmBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="399.0" layoutY="197.0"
           mnemonicParsing="false" onAction="#clickConfirm" text="Confirm"/>
   <Label fx:id="successLabel" alignment="CENTER" layoutX="384.0" layoutY="241.0" text="Success!" textFill="#11ff15">
      <font>
         <Font name="Arial Black" size="18.0"/>
      </font>
   </Label>
</AnchorPane>
